page{
  background-color: #f5f5f5;
}
.index_top{
  width: 85%;
  background-color: #ffffff;
  border-radius: 50rpx;
  height: 100rpx;
  margin: 15rpx 0 0 20rpx;
  display: flex;
  align-items: center;
}
.search{
  background-color: #ffffff;
}
.city_select{
  margin-left: 20rpx;
}
.index_search{
  width: 40rpx;
  height: 40rpx;
  margin-left: 50rpx;
}
.search_content{
  font-size: 30rpx;
}
.index_publish{
  margin-left: 30rpx;
  margin-right: 10rpx;
  width: 20%;
  font-size: 30rpx;
  background-color: #80e480;
  height: 70rpx;
  border-radius: 20rpx;
  padding-left: 20rpx;
}
/* 九宫格 */
.catagory_root{
  justify-content: space-around;
  margin-top: 50rpx;
  background-color: #ffffff;
  width: 94%;
  margin-left: 3%;
  border-radius: 30rpx;
  padding: 30rpx 0 30rpx 0;
}
.catagory_root .catagory_item{
  margin-left: 30rpx;
  display: flex;
  align-items: center;
}
.catagory_root .catagory_item_image{
  width: 80rpx;
  height: 80rpx;
}
/* 专属推荐 */
.index_recommend{
  margin-top: 50rpx;
  border-radius: 30rpx;
}
.recommend_top{
  justify-content: space-between;
  padding: 30rpx 20rpx 20rpx 20rpx;
}
.recommend_button{
  background-color: #cfb027;
  font-size: 30rpx;
  border-radius: 15rpx;
  padding: 6rpx 15rpx;
}
.recommend_content{
  padding: 30rpx 20rpx 20rpx 20rpx;
}
.recommend_item{
  margin-right: 50rpx;
}
.item_info{
  margin-left: 30rpx;
}

/* 热门推荐 */
.house_avatar{
  padding: 10rpx;
}
.rent_content{
  margin-bottom: 50rpx;
}
.content_userinfo{
  flex: 3;
}
.rent_money{
  color: red;
  border:red 1px solid ;
  border-radius: 30rpx;
  height: 60rpx;
  padding: 8rpx 15rpx 0 15rpx;
  margin-right: 20rpx;
}
.rent_info{
  margin-left: 30rpx;
  width: 600rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.rent_type{
  border-radius: 10rpx;
  color: white;
  background-color: rgb(108, 105, 252);
  padding: 6rpx 10rpx 6rpx 10rpx;
}
.rent_picture{
  margin-top: 30rpx;
 /* justify-content: space-around; */
  margin-left: 20rpx;
}
.rent_image{
  width: 150rpx;
  height: 150rpx;
}
.rent_location{
  margin-top: 30rpx;
  padding-bottom: 20rpx;
}
.rent_location_detailed{
  flex: 3;
}
.rent_location_simple{
  margin-right: 15rpx;
}

/* 轮播图 */
.img-item{
  display: block;
  width: 100%;
  height: 100%;
}