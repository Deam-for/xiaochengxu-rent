.type_select_item{
  padding: 20rpx;
  align-items: center;
}
.item_content{
  flex: 3;
  margin-left: 20rpx;
  justify-content: space-between;
}
.item_content .item{
  margin-top: 20rpx;
}
.type_select::after{
  content: "";
  width: 90%;
  height: 1rpx;
  display: block;
  background-color: gray;
  margin-left: 5%;
  opacity: 0.4;
}
.type_select_button{
  width: 350rpx;
  height: 80rpx;
  background-color: rgb(86, 228, 86);
  border-radius: 50rpx;
  margin: 80rpx 0 0 25%;
  padding: 18rpx 0 0 130rpx;
  box-sizing: border-box;
}