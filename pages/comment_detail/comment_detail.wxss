Page{
  background-color: #f5f5f5;
}
.content{
  background: #ffffff;
}
.content_top {
  padding: 20rpx 0 0 15rpx;
}
.content_top .img{
  margin-right: 20rpx;
}
.content_middle{
  width: 94%;
  margin-left: 3%;
  margin-top: 20rpx;
}
.content_img{
  width: 200rpx;
  height: 200rpx;
  margin: 25rpx 0 20rpx 25rpx;
  border-radius: 15rpx;
}
.content_bottom{
  margin: 10rpx 0 30rpx  15rpx;
  padding-bottom: 20rpx;
}

/* 底部区域 */
.bottom_box{
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0px;
  z-index: 100;
  background-color: #ffffff;
}
.bottom_box_collect{
  margin-left: 20rpx;
}
.bottom_input{
  background-color: #f5f5f5;
  height: 80rpx;
  margin-right: 30rpx;
  padding: 0 0 0 30rpx;
  border-radius: 25rpx;
}
/* 留言 */
.comment{
  border-radius: 20rpx;
  background-color: #ffffff;
  margin-top: 30rpx;
  margin-bottom: 250rpx;
  padding: 20rpx;
}
.comment .item{
  margin-bottom: 20rpx;
}
.comment .comment_item{
  padding-top: 15rpx;
  border-top: 1px solid rgb(223, 233, 223);
}
.comment .item_top image{
  margin: 0 20rpx 0 0;
}
.contents{
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.summary{
  padding: 20rpx;
  height: 80rpx;
  font-size: 36rpx;
}