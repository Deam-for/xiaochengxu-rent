page{
  background-color: #f5f5f5;
}
.house_detail{
  background-color: #ffffff;
  padding: 20rpx;
}
.rent_title{
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.rent_type{
  width: 20rpx;
  border-radius: 10rpx;
  color: white;
  background-color: rgb(108, 105, 252);
  padding: 6rpx 10rpx 6rpx 10rpx;
  display: flex;
  flex-direction: column;
  margin-right: 8rpx;
}
.house_userinfo_avatar{
  margin-left: -30rpx;
}
.house_rent_time{
  margin-top: 20rpx;
}
.content_userinfo{
  flex: 3;
}
/* 房子信息 */
.house_info{
  align-items: center;
  justify-content: space-between;
}
.house_info_item{
  margin-top: 20rpx;
}
.house_info_content{
  margin-top: 30rpx;
  width: 94%;
  margin-left: 2%;
}
.house_info_image{
  display: flex;
  flex-wrap: wrap;
  margin-left: 2%;
}
.house_info_image image{
  margin-right: 15rpx;
  margin-top: 20rpx;
}
/* 地图照片 */
.pic_locaion{           
  margin-right: 50rpx;
}
/* 留言 */
.liuyan{
  margin-top: 30rpx;
  font-size: 34rpx;
  /* margin-bottom: 12rpx; */
  margin-left: 12rpx;
}
.comment{
  border-radius: 20rpx;
  background-color: #ffffff;
  padding: 20rpx;
  padding-bottom: 100rpx;
  margin-bottom: 200rpx;
}
.comment .item{
  margin-bottom: 20rpx;
}
.comment .comment_item{
  padding-top: 15rpx;
  border-top: 1px solid rgb(223, 233, 223);
}
.comment .item_top image{
  margin: 0 20rpx 0 0;
}
.contents{
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.summary{
  background-color: #ffffff;
  padding: 20rpx;
  height: 80rpx;
  font-size: 36rpx;
}
.blankness{
  height: 6rpx;
}
/* 底部区域 */
.bottom_box{
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0px;
  z-index: 100;
  background-color: #fff;
}
.bottom_box_collect{
  margin-left: 20rpx;
}
.bottom_content{
  position: absolute;
  right: 0;
  bottom: 0;

}
.bottom_button{
  border-radius: 0;
  background-color: #7232dd;
  width: 180rpx;
  height: 100rpx;
}
.bottom_button1{
  width: 200rpx;
  border-radius: 0;
  background-color: #7232dd;
  height: 100rpx;
}