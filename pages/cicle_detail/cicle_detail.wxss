Page{
  margin: 0;
  padding: 0;
  background-color: #f5f5f5;
}
.top-img{
  width: 100%;
  height: 300rpx;
  position: absolute;
}
.top_content{
  position: relative;
  top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.top_content .text{
  color: white;
}
.content-item{
  background-color: #7bc2e2;
  border-radius: 50%;
  width: 140rpx;
  height: 140rpx;
  /* font-size: 42rpx; */
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.jianjie{
  background-color: #ffffff;
  margin-top: 130rpx;
  justify-content: space-around;
  padding-bottom: 20rpx;
}

.cicle_content{
  margin-bottom: 250rpx;
}
.house_avatar{
  padding: 10rpx;
}
.rent_content{
  margin-bottom: 50rpx;
}
.content_userinfo{
  flex: 3;
}
.rent_info{
  margin-left: 30rpx;
  width: 600rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.rent_picture{
  margin-top: 30rpx;
 /* justify-content: space-around; */
  margin-left: 20rpx;
}
.rent_image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.rent_location{
  margin-top: 30rpx;
  padding-bottom: 20rpx;
}
.rent_location_detailed{
  flex: 3;
}
.rent_location_simple{
  margin-right: 15rpx;
}
.comment image{
  margin-right: 10rpx;
}
.no_comment{
  margin-top: 30rpx;
  width: 94%;
  background: #ffffff;
  height: 100rpx;
  margin-left: 3%;
  margin-right: 3%;
  padding: 30rpx;
  border-radius: 20rpx;
  font-size: 35rpx;
}
.quart{
  height: 100rpx;
}