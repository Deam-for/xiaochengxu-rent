Page{
  background-color: #f5f5f5;
  padding: 0;
  margin:0
}
.title{
  padding: 15rpx;
  font-size: 35rpx;
}
.content{
  background-color: #ffffff;
  width: 94%;
  margin: 0 3% 30rpx 3%;
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.item{
  margin-right: 25rpx;
  width: 140rpx;
  height: 140rpx;
}
.content-item{
  background-color: #7bc2e2;
  border-radius: 50%;
  width: 140rpx;
  height: 140rpx;
  /* font-size: 42rpx; */
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-text{
  width: 150rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.color0{
  background-color: #9370DB;
}
.color1{
  background-color: #65c294;
}
.color2{
  background-color: #ffce7b;
}
.color3{
  background-color: #50b7c1;
}
.color4{
  background-color: #90d7ec;
}
.color5{
  background-color: #fcf16e;
}
.color6{
  background-color: #6495ED;
}
.color7{
  background-color: #E1FFFF;
}
.color8{
  background-color: #00ffff;
}
.cicle_content{
  margin-top: 20rpx;
  margin-bottom: 250rpx;
}
.house_avatar{
  padding: 10rpx;
}
.rent_content{
  margin-bottom: 50rpx;
}
.content_userinfo{
  flex: 3;
}
.rent_info{
  margin-left: 30rpx;
  width: 600rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.rent_picture{
  margin-top: 30rpx;
 /* justify-content: space-around; */
  margin-left: 20rpx;
}
.rent_image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.rent_location{
  margin-top: 30rpx;
  padding-bottom: 20rpx;
}
.rent_location_detailed{
  flex: 3;
}
.rent_location_simple{
  margin-right: 15rpx;
}
.comment image{
  margin-right: 10rpx;
}