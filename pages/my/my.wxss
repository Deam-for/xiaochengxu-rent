page{
  background-color: #f5f5f5;
}
/* 头部区域 */
.my_top{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.my_userinfo{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 94%;
  background-color: #ffffff;
  margin-left: 3%;
  margin-top: 15rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}
.my_login{
  width: 94%;
  background-color: #ffffff;
  margin-left: 3%;
  margin-top: 15rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  padding: 25rpx;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
}
.avatar{
  padding: 10rpx;
  margin-left: 15rpx;
}
.my_avatar{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.my_name{
  flex: 3;
}
.flex_column text{
  font-size: 30rpx;
}
.my_alter{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.my_record{
  margin-top: 1px;
  background-color: #ffffff;
  width: 94%;
  margin-left: 3%;
  display: flex;
  justify-content: space-around;
  border-bottom-right-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}
.my_record view{
  padding: 30rpx;
  justify-content: center;
}
.my_record image{
  width: 80rpx;
  height: 80rpx;
}
.my_setting{
  margin-top: 15rpx;
  width: 94%;
  margin-left: 3%;
  border-radius: 15rpx;
  padding: 20rpx;
  background-color: #ffffff;
  box-sizing: border-box;
}
.my_setting view{
  display: flex;
  margin-top: 25rpx;
  justify-content: space-between;
  padding: 0 20rpx 0 20rpx;
}
.my_setting image{
  width: 50rpx;
  height: 50rpx;
}
.line{
  background-color: gainsboro;
  height: 2rpx;
  width: 92%;
  
}