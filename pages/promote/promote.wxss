.booklist{
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
}
.book-img {
  
  width: 147rpx;
  height: 167rpx;
  box-shadow: -1px -1px 10rpx #bbb;
  margin-top: 8px;
  margin-left: 12px;
}
.book-info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 28rpx;
  color:black;
