Page{
  background: #f5f5f5;
}
.content{
  background-color: #ffffff;
  width: 94%;
  height: 500rpx;
  margin: 0 3% 0 3%;
  border-radius: 20rpx;
  margin-top: 50rpx;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.item{
  margin-right: 25rpx;
  width: 140rpx;
  height: 140rpx;
}
.content-item{
  background-color: #7bc2e2;
  border-radius: 50%;
  width: 140rpx;
  height: 140rpx;
  /* font-size: 42rpx; */
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-text{
  width: 160rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
